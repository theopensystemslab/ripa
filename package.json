{
  "name": "ripa",
  "version": "0.3.0",
  "private": true,
  "homepage": "https://demo.ripa.digital",
  "license": "https://docs.google.com/document/d/1i1dYO81Nv6v02I1dNIyhl80DEaAtEYAZnuQaoieqhrA/edit?usp=sharing",
  "repository": {
    "url": "https://github.com/theopensystemslab/ripa"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "cosmos": "cosmos",
    "cosmos:export": "cosmos-export",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "tslint --project .",
    "lint:fix": "tslint --fix --project ."
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@material-ui/core": "^4.8.3",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/styles": "^4.9.10",
    "apollo-boost": "^0.4.7",
    "axios": "^0.19.2",
    "classnames": "^2.2.6",
    "date-fns": "^2.9.0",
    "formik": "^2.1.2",
    "graphlib": "^2.1.8",
    "graphql": "^14.6.0",
    "immer": "^5.3.6",
    "lodash": "^4.17.15",
    "marked": "^0.8.0",
    "navi": "^0.14.0",
    "postcode": "^2.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-dropzone": "^10.2.1",
    "react-feather": "^2.0.3",
    "react-focus-within": "^2.0.1",
    "react-headroom": "^3.0.0",
    "react-helmet-async": "^1.0.4",
    "react-navi": "^0.14.3",
    "react-navi-helmet-async": "^0.14.3",
    "react-scripts": "3.4.0",
    "scroll-into-view-if-needed": "^2.2.24",
    "smooth-scroll-into-view-if-needed": "^1.1.27",
    "typeface-inter": "^3.12.0",
    "zustand": "^2.2.2"
  },
  "peerDependencies": {
    "@material-ui/core": "^4.8.3",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/styles": "^4.9.10",
    "formik": "^2.1.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-focus-within": "^2.0.1"
  },
  "devDependencies": {
    "@testing-library/dom": ">=5",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/graphlib": "^2.1.5",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "husky": "^4.0.10",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^10.0.0",
    "node-sass": "^7.0.0",
    "prettier": "^1.19.1",
    "prettier-plugin-import-sort": "^0.0.3",
    "pretty-quick": "^2.0.1",
    "react-cosmos": "^5.0.6",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.1.0",
    "typescript": "~3.7.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/*.tsx",
      "!src/components/*.fixture.tsx"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn type-check && yarn lint:fix && pretty-quick --staged --pattern 'src/**/*.*'"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,html,md,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "bit": {
    "env": {
      "compiler": "bit.envs/compilers/react-typescript@3.1.53"
    },
    "componentsDefaultDirectory": "src/amira/{name}",
    "packageManager": "yarn"
  },
  "engines": {
    "node": ">=9",
    "yarn": ">=0.14.0"
  }
}
